<div class="main user-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
      <%= form_tag("/login")  do %>
        <div class="form users-form">
          <div class="form-body">
            <!-- エラーメッセージのヒョ時。user_contorollreのloginにて定義している -->

            <% if @error_message %>
              <div class="form-error">
                <%= @error_message%>
              </div>
            <% end %>

            <p>メールアドレス</p>
              <input type="text" name="email" value="">
            <p>パスワード</p>
              <input type="password" name="password" value="">
            <p>
              <input type="submit" value="ログイン">
            </p>
          </div>
        </div>
      <% end %>
  </div>
</div>
